<html>
<head>
	<title>Rails for Designers Students</title>
		<link href='http://fonts.googleapis.com/css?family=Arvo' rel='stylesheet' type='text/css'>"
		<script src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js' type='text/javascript'></script>
		<script>$(document).ready(function() 
			{$('.thumbnail').on('click', function() {
				$(this).siblings().fadeToggle();
				});
			});
		</script>
</head>

<body>
<h1>Rails for Designers Students</h1>

<div class = 'container'>
	<ul>
	<% @rfd_students.each do |student_hash| %>
		<li class='frame'>
			<img class='thumbnail' src="http://codemountain.com<%= student_hash['student']['avatar_url'] %>" >
			<p class='name'><%= student_hash['student']['name']%></p>
			</li>
	<% end %>
	</ul>
</div>

<!-- CSS class information
frame for li
thumb for img
name for p
 -->
</body>
</html>